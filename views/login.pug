extend layout.pug

block content
    .page-header
        h1 Proxmox RDP Connector
    nav.navbar.navbar-default
        .container-fluid
            #bs-example-navbar-collapse-1.collapse.navbar-collapse
                ul.nav.navbar-nav
                    li
                        a(href='/config') Config
                ul.nav.navbar-nav.navbar-right
    .container.row.Login
        .jumbotron.col-md-4.col-md-offset-4
            .h3 #{lasterror}
            form(action='/login' method='post')
                .form-group
                    label(for="username") Username:
                    input.form-control(type='text' name='username' id='usernme' placeholder="User Name")
                .form-group
                    label(for="password") Password:
                    input.form-control(type='password' name='password' id='password' placeholder="Password")
                .form-group
                    label(for="realm") Realm:
                    select.form-control(name='realmcb' id='realmcb')
                        each domain in domains
                            if(domain.default)
                                option(value=(domain.realm) selected) #{domain.realm}
                            else 
                                option(value=(domain.realm)) #{domain.realm}
                .form-check
                    input.btn.btn-primary(type='submit' value='Log In' data-loading-text="<i class='fa fa-circle-o-notch fa-spin'></i> Processing Order")
